    #!/usr/bin/env bash
    set -euo pipefail

    if [ "$#" -lt 1 ]; then
      echo "Usage: git-checkout-track <branch|remote/branch>" >&2
      exit 1
    fi

    branch="$1"
if [[ "$branch" == */* ]]; then
  remote_ref="$branch"
else
  remote_ref="origin/$branch"
fi
git checkout --track "$remote_ref"

