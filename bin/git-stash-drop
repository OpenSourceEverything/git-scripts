#!/usr/bin/env bash
set -euo pipefail

# Drop a stash entry.
# Manual equivalent:
#   git stash drop [stash-ref]
usage() {
  cat <<'EOF'
Usage: git-stash-drop [stash-ref] [git-stash-args...]

Drop a stash entry (default: stash@{0}).

Options:
  -h, --help, -help  Show help
EOF
}

# Show help and exit early when requested.
if [[ "${1:-}" == "-h" || "${1:-}" == "--help" || "${1:-}" == "-help" ]]; then
  usage
  exit 0
fi

# Execute the git command, passing through any args.
git stash drop "$@"
