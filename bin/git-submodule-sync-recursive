#!/usr/bin/env bash
set -euo pipefail

# Sync submodule URLs recursively with .gitmodules.
# Manual equivalent:
#   git submodule sync --recursive
usage() {
  cat <<'EOF'
Usage: git-submodule-sync-recursive

Sync submodule URLs from .gitmodules recursively.

Options:
  -h, --help, -help  Show help
EOF
}

# Show help and exit early when requested.
if [[ "${1:-}" == "-h" || "${1:-}" == "--help" || "${1:-}" == "-help" ]]; then
  usage
  exit 0
fi

# This command takes no arguments, so error on extras.
if [[ $# -gt 0 ]]; then
  echo "Unexpected arguments: $*" >&2
  usage >&2
  exit 1
fi

# Execute the git command.
git submodule sync --recursive
