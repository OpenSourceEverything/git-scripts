#!/usr/bin/env bash
set -euo pipefail

# Initialize and force-update submodules recursively.
# Manual equivalent:
#   git submodule update --init --recursive --force
usage() {
  cat <<'EOF'
Usage: git-submodule-update-recursive-force

Force-update and initialize submodules recursively.

Options:
  -h, --help, -help  Show help
EOF
}

# Show help and exit early when requested.
if [[ "${1:-}" == "-h" || "${1:-}" == "--help" || "${1:-}" == "-help" ]]; then
  usage
  exit 0
fi

# This command takes no arguments, so error on extras.
if [[ $# -gt 0 ]]; then
  echo "Unexpected arguments: $*" >&2
  usage >&2
  exit 1
fi

# Execute the git command.
git submodule update --init --recursive --force
