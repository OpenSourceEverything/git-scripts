#!/usr/bin/env bash
set -euo pipefail

# Reset HEAD and index to a ref, keeping working tree changes.
# Manual equivalent:
#   git reset --mixed <ref>
usage() {
  cat <<'EOF'
Usage: git-reset-mixed <ref>

Mixed reset to a ref (keeps working tree changes).

Options:
  -h, --help, -help  Show help
EOF
}

# Show help and exit early when requested.
if [[ "${1:-}" == "-h" || "${1:-}" == "--help" || "${1:-}" == "-help" ]]; then
  usage
  exit 0
fi

# Require exactly one ref.
if [[ $# -lt 1 ]]; then
  echo "Missing required argument: <ref>" >&2
  usage >&2
  exit 1
fi
if [[ $# -gt 1 ]]; then
  echo "Too many arguments: $*" >&2
  usage >&2
  exit 1
fi

# Execute the git command.
git reset --mixed "$@"
